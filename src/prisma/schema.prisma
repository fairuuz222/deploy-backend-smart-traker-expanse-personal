}

datasource db {
  provider = "postgresql"
}


// Definisi Enum diletakkan di sini
enum TransactionType {
  INCOME
  EXPENSE
}

enum OtpType {
  REGISTRATION
  PASSWORD_RESET
}

enum UserRole {
  USER
  ADMIN
}

enum CategoryOption {
  // EXPENSE
  FOOD_AND_DRINK
  TRANSPORTATION
  SHOPPING
  ENTERTAINMENT
  BILLS
  HEALTH
  EDUCATION
  OTHER_EXPENSE

  // INCOME
  SALARY
  BONUS
  INVESTMENT
  FREELANCE
  OTHER_INCOME
}

  
enum WalletType {
  CASH
  BANK
  E_WALLET
  SAVINGS
}


// 1. Buat Enum Status Hubungan
